# EditorConfig - https://editorconfig.org
# Systars - Systolic Array RTL Generator

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# Justfile
[justfile]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Verilog / SystemVerilog
[*.{v,sv,svh,vh}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# XML / HTML
[*.{xml,html,htm}]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# Git files
[.git*]
indent_size = 4
